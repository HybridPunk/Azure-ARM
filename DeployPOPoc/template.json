{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vn_popoc_dmz_192.168.99.0_28_name": {
            "defaultValue": "vn_name",
            "type": "string"
        },
        "location":{
            "defaultValue": "North Europe",
            "type": "string"
        },
        "vn_popoc_dmz_192.168.99.0_28_prefix": {
            "defaultValue": "192.168.99.0/28",
            "type":"string"
        }

    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('vn_popoc_dmz_192.168.99.0_28_name')]",
            "apiVersion": "2018-02-01",
            "location":"[parameters('location')]",
            "tags": {
                "project":"Post Office PoC"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vn_popoc_dmz_192.168.99.0_28_prefix')]"
                    ]
                }
            },
            "dependsOn": []
        }
    ]
}